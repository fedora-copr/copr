# SSH config for connecting to builders
# Based on ansible roles/copr/backend/templates/ssh_config.j2

Host *
    IdentityFile ~/.ssh/id_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ServerAliveInterval 20
    ServerAliveCountMax 5
    ConnectTimeout 60
    User root
    # SSH connection multiplexing for faster repeated connections
    ControlPath=~/.ssh/skt_%h_%p_%r
    ControlMaster=auto
    ControlPersist=60
